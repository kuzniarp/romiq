<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
  
  <head>
    
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
    
    <title>Admin</title>
    
    <!--                       CSS                       -->
    
    <!-- Reset Stylesheet -->
    <link rel="stylesheet" href="/stylesheets/reset.css" type="text/css" media="screen" />
    
    <!-- Main Stylesheet -->
    <link rel="stylesheet" href="/stylesheets/admin.css" type="text/css" media="screen" />
    
    <!-- Invalid Stylesheet. This makes stuff look pretty. Remove it if you want the CSS completely valid -->
    <link rel="stylesheet" href="/stylesheets/invalid.css" type="text/css" media="screen" />	
    
    <!-- Colour Schemes
	 
	 Default colour scheme is green. Uncomment prefered stylesheet to use it.
	 
	 <link rel="stylesheet" href="/stylesheets/blue.css" type="text/css" media="screen" />
	 
	 <link rel="stylesheet" href="/stylesheets/red.css" type="text/css" media="screen" />  
	 
	 -->
    
    <!-- Internet Explorer Fixes Stylesheet -->
    
    <!--[if lte IE 7]>
    <link rel="stylesheet" href="/stylesheets/ie.css" type="text/css" media="screen" />
    <![endif]-->
    
    <!--                       Javascripts                       -->
    
    <!-- jQuery -->
    <script type="text/javascript" src="/javascripts/jquery-1.3.2.min.js"></script>
    
    <!-- jQuery Configuration -->
    <script type="text/javascript" src="/javascripts/simpla.jquery.configuration.js"></script>
    
    <!-- Facebox jQuery Plugin -->
    <script type="text/javascript" src="/javascripts/facebox.js"></script>
    
    <!-- jQuery WYSIWYG Plugin -->
    <script type="text/javascript" src="/javascripts/jquery.wysiwyg.js"></script>
    
    <!-- Internet Explorer .png-fix -->
    
    <!--[if IE 6]>
    <script type="text/javascript" src="/javascripts/DD_belatedPNG_0.0.7a.js"></script>
    <script type="text/javascript">
      DD_belatedPNG.fix('.png_bg, img, li');
    </script>
    <![endif]-->
    
  </head>
  
  <body id="login">
    
    <div id="login-wrapper" class="png_bg">
      <div id="login-top">
	
	<h1>Admin</h1>
	<!-- Logo (221px width) -->
	<img id="logo" src="/images/logo.png" alt="Admin" />
      </div> <!-- End #logn-top -->
      
      <div id="login-content">
	
	<% form_tag admin_login_path do %>
	  <% if flash[:login_notice].present? %>
	  <div class="notification information png_bg">
	    <div>
	      <%= flash[:notice] %>
	    </div>
	  </div>
	  <% end %>
	  <p>
	    <label>Login</label>
	    <input class="text-input" type="text" name="login" />
	  </p>
	  <div class="clear"></div>
	  <p>
	    <label>Hasło</label>
	    <input class="text-input" type="password" name="password" />
	  </p>
	  <div class="clear"></div>
	  <p id="remember-password" style="display:none;">
	    <input type="checkbox" />Pamiętaj mnie
	  </p>
	  <div class="clear"></div>
	  <p>
	    <input class="button" type="submit" value="Zaloguj" />
	  </p>
	  
	<% end %>
      </div> <!-- End #login-content -->
      
    </div> <!-- End #login-wrapper -->
    
  </body>
  
</html>
