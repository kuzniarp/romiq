<% form_for([:admin,  @work]) do |f| %>
  <%= f.error_messages %>
  
  <fieldset> <!-- Set class to "column-left" or "column-right" on fieldsets to divide the form into columns -->
    
    <p>
      <label>Tytuł</label>
      <%= f.text_field :name, :class => "text-input small-input" %>
    </p>

    <p>
      <label>Zawartość</label>
      <%= f.cktext_area :description, :toolbar=>'Full', :width=>'99%', :language => 'pl' %>
    </p>

    <p>
      <%= f.label 'work[category_ids][]', "Kategoria" %><br />
      <%= collection_select :work, :category_ids, WorkCategory.find(:all, :order => 'name ASC'), :id, :name, { :selected => @work.category_ids }, { :multiple => false, :name => 'work[category_ids][]' } -%>
    </p>
        
    <p>
      <label>Status</label>
      <%= f.check_box :status %> Aktywna?
    </p>
                
    <p>
      <input class="button" type="submit" value="Zapisz" />
    </p>
    
  </fieldset>
  
  <div class="clear"></div><!-- End .clear -->
<% end %>
