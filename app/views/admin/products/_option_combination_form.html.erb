<% @option_combination ||= OptionCombination.new %>
<% form_remote_for [:admin, @option_combination], :update => "option_combination_form" do |f| %>
  <%= f.hidden_field :product_id, :value => @product.id %>
  <p>
  <div id="option_combination_form_options"></div>
  </p>
  <ul>
    <% @option_combination.options.each do |option| %>      
      <li>
        <%= hidden_field_tag "option_combination[option_ids][]", option.id %>
        <%= "#{option.feature.name} #{option.name}" %>
      </li>
    <% end %>
  </ul>
  <p>
    Wybierz zdjecia, ktore odnosza sie do wybranej opcji:<br />
  <% @product.pictures.each do |picture| %>
    <%= check_box_tag "option_combination[picture_ids][]", picture.id, @option_combination.pictures.include?(picture), :disabled => @option_combination.new_record?, :onclick => "this.form.commit.click();" %>
    <%= image_tag picture.url(:thumb) %>
  <% end %>
  </p>
  <%= f.submit 'Zapisz', :name => 'commit', :style => 'display: none;' %>
  <%= link_to('Usun', admin_option_combination_path(@option_combination), :method => :delete) unless @option_combination.new_record? %>
<% end %>
