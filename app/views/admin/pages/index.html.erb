<div class="content-box"><!-- Start Content Box -->
  
  <div class="content-box-header">
    
    <h3>Zarządzaj stronami</h3>
    
    <ul class="content-box-tabs">
      <li><a href="#tab1" class="default-tab">Tabela</a></li> <!-- href must be unique and match the id of target div -->
      <li><a href="#tab2">Forms</a></li>
    </ul>
    
    <div class="clear"></div>
    
  </div> <!-- End .content-box-header -->
  
  <div class="content-box-content">
    
    <div class="tab-content default-tab" id="tab1"> <!-- This is the target div. id must match the href of this div's tab -->
            
      <table>
	
	<thead>
	  <tr>
	    <th>Tytuł</th>
	    <th>Zawartość</th>
	    <th>Status</th>
	    <th>Typ</th>
	    <th>&nbsp;</th>
	  </tr>
	  
	</thead>
	
	<tfoot>
	  <tr>
	    <td colspan="6">
	      <div class="bulk-actions align-left">
		<%= link_to 'Stwórz nową stronę', new_admin_page_path %>
	      </div>
	      
	      <div class="pagination">
		<a href="#" title="First Page">&laquo; First</a><a href="#" title="Previous Page">&laquo; Previous</a>
		<a href="#" class="number" title="1">1</a>
		<a href="#" class="number" title="2">2</a>
		<a href="#" class="number current" title="3">3</a>
		<a href="#" class="number" title="4">4</a>
		<a href="#" title="Next Page">Next &raquo;</a><a href="#" title="Last Page">Last &raquo;</a>
	      </div> <!-- End .pagination -->
	      <div class="clear"></div>
	    </td>
	  </tr>
	</tfoot>
	
	<tbody>

	  <% @pages.each do |page| %>
	  <tr <%= cycle('class="alt-row"', '') %>>
	    <td><%=h page.name %></td>
	    <td><%=h truncate(page.body, :length => 100) %></td>
	    <td><%=h page.status.to_s(:activation) %></td>
	    <td><%=h page.type %></td>
	    <td>
	      <%= link_to '<img src="/images/icons/pencil.png" alt="Edytuj" />', edit_admin_page_path(page) %>
	      <%= link_to '<img src="/images/icons/cross.png" alt="Usuń" />', [:admin, page], :confirm => 'Jesteś pewien?', :method => :delete %>
	    </td>
	  </tr>
	  <% end %>
	</tbody>
	
      </table>
      
    </div> <!-- End #tab1 -->
    
    <div class="tab-content" id="tab2">
      
      
    </div> <!-- End #tab2 -->        
    
  </div> <!-- End .content-box-content -->
  
</div> <!-- End .content-box -->
