<h1>Strony</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Body</th>
    <th>Item order</th>
    <th>Parent</th>
    <th>Permalink</th>
    <th>Status</th>
    <th>Type</th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%=h page.name %></td>
    <td><%=h page.body %></td>
    <td><%=h page.item_order %></td>
    <td><%=h page.parent_id %></td>
    <td><%=h page.permalink %></td>
    <td><%=h page.status %></td>
    <td><%=h page.type %></td>
    <td><%= link_to 'Show', [:admin, page] %></td>
    <td><%= link_to 'Edit', edit_admin_page_path(page) %></td>
    <td><%= link_to 'Destroy', [:admin, page], :confirm => 'Jesteś pewien?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Stwórz nową stronę', new_admin_page_path %>
