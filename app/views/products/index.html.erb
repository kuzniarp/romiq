<div class="grid_3 nested_lists">
  <h3>Kategorie</h3>
  <%= category_list ProductCategory %>
</div>
<div class="grid_9">
  <% for product in @products do %>
    <div>
      <h3><%= product.name %></h3>
      <% image_tag product.image.url(:medium) if product.image %>
      <%= product.description %>
    </div>
    <hr />
   <% end %>
</div>
