<li id="work_picture_<%= picture.id %>">  <%= image_tag picture.url(:thumb) %>  <% product_options ||= false %>  <% if product_options %>  <% else %>    <%= link_to_remote image_tag('icons/cross.png'), :url => admin_picture_path(picture), :method => :delete, :success => "$('#work_picture_#{picture.id}').remove();" %>  <% end %></li>