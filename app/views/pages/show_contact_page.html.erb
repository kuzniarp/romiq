  <h3>Wyślij nam wiadomość</h3>


  <form method="post" action="sendmail.php" class="standardForm">

    <div class="field">

      <label for="name">Podaj swoje imię</label>

      <input type="text" name="name" id="name" class="textbox shadow" />

    </div>

    <div class="field">

      <label for="email">Twój email</label>

      <input type="text" name="email" id="email" class="textbox shadow" />

    </div>


    <div class="field">

      <label for="message">Wiadomość</label>

      <textarea name="message" id="message" class="textarea shadow"></textarea>

    </div>

    <div class="field hidden">

      <input type="text" name="e_mail" id="e_mail" class="textbox shadow" />

    </div>

    <div class="field">

      <input type="submit" name="submit" id="submit" value="Send Message" class="button shadow hovershadow" />

    </div>

  </form>

</div><!--//grid_12-->

