<div class="grid_3 nested_lists">
  <h3>Kategorie</h3>
  <%= category_list WorkCategory %>
</div>
<div class="grid_9">
  <% for work in @works do %>
    <div>
      <h3><%= work.name %></h3>
      <%= image_tag work.image.url(:medium) if work.image %>
      <%= work.description %>
    </div>
    <hr />
   <% end %>
</div>
